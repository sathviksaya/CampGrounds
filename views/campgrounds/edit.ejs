<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="image">Add More Images...</label>
                    <input class="form-control" id="image" type="file" name="image" multiple>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img, i) { %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                            <label for="image-<%= i %>">Delete?</label>
                        </div>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" id="title" type="text" name="campground[title]" value="<%= campground.title %>" required>
                    <div class="valid-feedback">That's nice</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" id="location" type="text" name="campground[location]" value="<%= campground.location %>" required>
                    <div class="valid-feedback">That's nice</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="Price" aria-describedby="price-label" name="campground[price]" value="<%= campground.price %>" required>
                        <div class="valid-feedback">That's nice</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" id="description" type="text" name="campground[description]" required><%= campground.description %></textarea>
                    <div class="valid-feedback">That's nice</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update Campground</button>
                </div>
            </form>


            <footer>
                <a class="btn btn-info" href="/campgrounds/<%= campground._id %>">Back To Campground</a>
            </footer>
        </div>
    </div>